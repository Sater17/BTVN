<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./reuse/headHTML'); %>
        <style>
            body {
                background-color: rgb(51, 49, 49);
            }
        </style>
</head>

<body>
    <header>
        <%- include('./reuse/head'); %>
    </header>
    <main>
        <img src=<%=data2[0].src%> class="mx-auto d-block" style=" width:50% ;height:40%; background-size:hidden">
        <div>
            <h3 class="mt-3 mb-3 pl-3 text-left text-white" >Phim bộ trong ngày</h3>
            <div class="text-center d-flex flex-wrap justify-content-start">

                <% data.forEach(function(card){%>


                    <div class="col-3">
                        <img src=<%=card.src%> class="img-responsive" style="width: 100%" >
                        <p class="mt-2 text-white">
                            <%=card.name%>
                        </p>
                    </div>
                    <%});%>
            </div>
            <!-- Phim moi -->
            <h3 class="mt-3 mb-3 pl-3 text-left text-white">Phim bộ trong tháng</h3>
            <div class="text-center d-flex flex-wrap justify-content-start">

                <% data2.forEach(function(card){%>


                    <div class="col-3">
                        <img src=<%=card.src%> class="img-responsive" style="width: 100%" >
                        <p class="mt-2 text-white">
                            <%=card.name%>
                        </p>

                    </div>

                    <%});%>
            </div>
    </main>
    <footer>
        <%- include('./reuse/foot'); %>
    </footer>
</body>

</html>